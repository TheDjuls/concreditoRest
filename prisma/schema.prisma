// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model EstatusProspecto {
  id        Int         @id
  estatus   String
  prospecto Prospecto[]
}

model Prospecto {
  id                 Int              @id @default(autoincrement())
  nombre             String
  ap_paterno         String
  ap_materno         String?
  calle              String
  numero             String
  colonia            String
  codigo_postal      String
  telefono           String
  rfc                String
  observaciones      String?
  //relations
  estatus            EstatusProspecto @relation(fields: [estatusProspectoId], references: [id])
  estatusProspectoId Int
  usuario            Usuarios @relation(fields: [usuarioCapturoId], references: [id])
  usuarioCapturoId   Int 
  documentos         Documentos[]
}

model Documentos {
  id               Int       @id @default(autoincrement())
  nombre_documento String
  url              String
  //relations
  prospecto        Prospecto @relation(fields: [prospectoId], references: [id])
  prospectoId      Int
}

model Usuarios {
  id         Int    @id @default(autoincrement())
  nombre     String?
  ap_paterno String?
  ap_materno String?
  nombre_usuario String
  password String
  prospecto Prospecto[]
}
